
<view class="map__shell">
<map
      id="myMap"
      style="width: 100%; height: 100%;"
      latitude="{{latitude + 0.001}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      enable-zoom="{{false}}"
      enable-scroll="{{false}}"
      scale="15"
      show-location
></map>
<view class="address" hidden="{{!showLabel}}"  bindtap="getRoute">
  <view class="address__title">办公地点</view>
  <view class="address__text">{{address}}</view>
  <image class="address__arrow" src="/imgs/icon-arrow-right.png"></image>
</view>
</view>
