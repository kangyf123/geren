/* components/sun-map/sun-map.wxss */
.address {
 font-size: 24rpx;
  position: absolute;
  top: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  left: 50%;
  box-shadow: 0px 3px 15px 0px rgba(168,168,168,0.5);
  padding: 20rpx 30rpx;
  width: 560rpx;
  margin-right: -280rpx;
  margin-left: -280rpx;
  box-sizing: border-box;
}
.address__title {
  font-size: 26rpx;
  font-weight: 600;
  color:#330000;
}
.address__text {
  width: 480rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.address::before {
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  margin-left: -5rpx;
  content: "";
  border-left: 16rpx solid transparent;
  border-right: 16rpx solid transparent;
  border-top: 16rpx solid #fff;
  box-shadow: 0px 3px 15px 0px rgba(168,168,168,0.5);
}
.address__arrow {
  position: absolute;
  top: 40rpx;
  right: 22rpx;
  width: 12rpx;
  height: 22rpx;
}
.map__shell {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  overflow: hidden;
}