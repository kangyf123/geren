page {
  min-height: 100%;
  height: 100%;
  max-height: fit-content;
}

.page {
  min-height: 100%;
  background-color: #F5F5F5;
}

.page.white {
  background-color: #FFF;
}

/** 未登录时的页面 start **/
.login-panel {
  text-align: center;
  height: 100%;
  background-color: #fff;
}

.login-empty-panel {
  display: inline-block;
  margin-top: 189rpx;
}

.login-empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 18rpx;
}

.login-empty-msg {
  color: #999999;
  font-size: 28rpx;
  margin-top: 2rpx;
}

.btn-login {
  margin-top: 50rpx;
  width: 400rpx;
  font-size: 28rpx;
  margin-left: auto;
  margin-right: auto;
}

/** 未登录时的页面 end **/

.recommend-panel {
  display: block;
}

/** 职位推荐头部的推荐职位类别 start **/
.job-type-panel {
  position: fixed;
  top: 0;
  background-color: #FFF;
  margin-bottom: 20rpx;
  width: 100%;
}

.recommend-head-badge {
  position: absolute;
  color: #FFF;
  background-color: #F83D3D;
  border-radius: 28rpx;
  top: 14rpx;
  right: 50rpx;
  font-size: 20rpx;
  font-weight: initial;
  min-width: 8rpx;
  height: 28rpx;
  line-height: 28rpx;
  padding: 0 10rpx;
  text-align: center;
}

.job-type-placeholder {
  height: 120rpx;
}

.job-type-item {
  padding: 5rpx 28rpx 25rpx;
  position: relative;
  color: #666666;
  font-size: 28rpx;
  flex: 1;
}

.job-type-item:after {
  content: '';
  position: absolute;
  bottom: 0;
  width: 40rpx;
  left: 44%;
  height: 4rpx;
  background-color: transparent;
}

.job-type-item.selected {
  color: #333;
  font-weight: bold;
}

.job-type-item.selected:after {
  background-color: #3B87FF;
}

/** 职位推荐头部的推荐职位类别 end **/

/** 职位列表 start **/
.job-item {
  padding: 0 0 10rpx;
}

.job-item-item {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.job-item-head {
  padding-top: 22rpx;
  padding-left: 39rpx;
  padding-right: 39rpx;
  margin-bottom: 0;
  border-bottom-width: 1rpx;
}

.job-item-item.first {
  padding-top: 30rpx;
}

.job-item-title {
  display: flex;
  overflow: hidden;
  align-items: center;
  margin-right: 30rpx;
}

.job-item-title-name {
  padding-right: 10rpx;
}

.sep-dot {
  display: inline-block;
  width: 6rpx;
  height: 6rpx;
  background-color: #A7A7A7;
  vertical-align: middle;
  border-radius: 10rpx;
  margin-left: 13rpx;
  margin-right: 13rpx;
}

/** 职位列表 end **/

.job-type-item_scroll {
  height: 56rpx;
  border-radius: 4rpx;
  background: #f5f5f5;
  color: #666;
  text-align: center;
  line-height: 56rpx;
  margin: 20rpx 0 20rpx 20rpx;
  font-size: 26rpx;
  flex: 0 0 222rpx;
  position: relative
}

.active {
  background: #3B87FF;
  color: #fff;
}

.recommend_icon__new {
  width: 56rpx;
  height: 26rpx;
  margin-left: 10rpx
}

.padding_b {
  padding-bottom: 20rpx
}

.to-optimize-tips {
  width: 100%;
  height: 153rpx;
}

.to-optimize-icon {
  width: 100%;
  height: 160rpx;
}

.to-optimize-bindtap {
  width: 94%;
  height: 110rpx;
  position: absolute;
  top: 25rpx;
  left: 25rpx;
}